.container.top-ten-wrapper
  .row
    .col-lg-6
      .week-villains
        = render 'products/week_villains'
    .col-lg-6
      .week-heroes
        = render 'products/week_heroes'
.container.all-market-wrapper
  .row
    .col-lg-2
      = render 'categories/categories_sidenav', market: 0
    .col-lg-10
      .row
        - @markets.each do |market|
          .col-12.col-md-6.col-lg-4
            .market-wrapper.py-3.text-center
              = link_to '', market
              = image_tag market.logo, height: 80, width: 200
              hr
              h2 = market.name
